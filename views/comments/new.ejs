<%- include("../partials/header") %>

<div class="row justify-content-center">
  <div class="col-md-12">
    <h1 class="text-center">Add New Comment to <%= vacation.name %></h1>
  </div>
  <div class="col-lg-4 col-md-6 col-sm-8 col-10">
    <form action="/vacations/<%= vacation._id %>/comments" method="POST">
      <div class="form-group">
        <label for="newCommentText" class="sr-only">Add a new comment</label>
        <input
          id="newCommentText"
          class="form-control"
          type="text"
          name="comment[text]"
          placeholder="Add a new comment"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/vacaions">Go Back</a>
  </div>
</div>

<%- include("../partials/footer") %>
