<%- include("../partials/header") %>

<div class="row justify-content-center">
  <div class="col-md-12">
    <h1 class="text-center">Edit <%= vacation.name %></h1>
  </div>
  <div class="col-lg-4 col-md-6 col-sm-8 col-10">
    <form
      action="/vacations/<%= vacation._id %>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <label for="editVacationName" class="sr-only">Name</label>
        <input
          id="editVacationName"
          class="form-control"
          type="text"
          name="vacation[name]"
          value="<%= vacation.name %>"
        />
      </div>
      <div class="form-group">
        <label for="editVacationPrice" class="sr-only">Price</label>
        <input
          id="editVacationPrice"
          class="form-control"
          type="number"
          name="vacation[price]"
          value="<%= vacation.price %>"
          min="0.00"
          step="0.01"
        />
      </div>
      <div class="form-group">
        <label for="vacationEditImage">Image</label>
        <input
          id="vacationEditImage"
          class="form-control"
          type="file"
          name="image"
          value="<%= vacation.image %>"
        />
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="location"
          id="location"
          value="<%= vacation.location %>"
        />
      </div>
      <div class="form-group">
        <label for="descriptionInput">Description:</label>
        <textarea
          class="form-control"
          name="vacation[description]"
          id="descriptionInput"
          rows="7"
        >
<%= vacation.description %></textarea
        >
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/vacations">Go Back</a>
  </div>
</div>

<%- include("../partials/footer") %>
